
<% speakers = data.speakers2021 %>
<% total = speakers.count %>
<% cols = 3 %>
<% rows = total / cols %>
<% over = total % cols %>
<% i = 0 %>

<div class="container" style="margin-top: 4em;">
  <div class="row">
    <div class="col-sm speaker">
      <a id="speakers"></a>
      <h2 class="h2 bg-info">2021 Symposium Speakers</h2>
    </div>
  </div>
</div>
<div class="container">
  
  <% rows.times do %>

    <div class="row">
    
    <% cols.times do %>
    
      <div class="col-sm speaker">
        <%= image_tag speakers[i].id, class: "headshot" %>
        <h3><%= speakers[i].full_name %></h3>
        <p><strong><%= speakers[i].affiliation %></strong></p>
        <%= link_to "Website »", speakers[i].url, class: "btn btn-secondary btn-sm", role: "button" %>
      </div>
      
      <% i+= 1 %>
    
    <% end %>
    </div>

  <% end %>
  
  <% if over > 0 %>
    <div class="row">
      <% over.times do %>
        <div class="col-sm speaker">
          <%= image_tag speakers[i].id, class: "headshot" %>
          <h3><%= speakers[i].full_name %></h3>
          <p><strong><%= speakers[i].affiliation %></strong></p>
          <%= link_to "Website »", speakers[i].url, class: "btn btn-secondary btn-sm", role: "button" %>
        </div>

        <% i+= 1 %>
      
      <% end %>
    </div>
  <% end %>
</div>