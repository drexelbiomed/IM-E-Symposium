
<% total = data.speakers.count %>
<% cols = 3 %>
<% rows = total / cols %>
<% over = data.speakers.count % cols %>
<% speakers = data.speakers %>
<% i = 0 %>

<div class="container" style="margin-top: 4em;">
  <div class="row">
    <div class="col-sm speaker">
      <a title="speakers"></a>
      <h2 class="h2">Conference Co&#x2011;Chairs</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-4 speaker">
      <%= image_tag "kara-spiller.png", class: "headshot" %>
      <h3>Kara Spiller</h3>
      <p>Drexel University</p>
      <%= link_to "View Website »", "https://drexel.edu/biomed/faculty/core/spillerkara/", class: "btn btn-secondary btn-sm", role: "button" %>
    </div>
    <div class="col-lg-4 speaker">  
      <%= image_tag "chris-rodell.png", class: "headshot" %>
      <h3>Chris Rodell</h3>
      <p>Drexel University</p>
      <%= link_to "View Website »", "https://drexel.edu/biomed/faculty/core/RodellChristopher/", class: "btn btn-secondary btn-sm", role: "button" %>
    </div>
    <div class="col-lg-4 speaker">  
      <%= image_tag "yinghui-zhong.png", class: "headshot" %>
      <h3>Yinghui Zhong</h3>
      <p>Drexel University</p>
      <%= link_to "View Website »", "https://drexel.edu/biomed/faculty/core/ZhongYinghui/", class: "btn btn-secondary btn-sm", role: "button" %>
    </div>
  </div>
</div>
<div class="container" style="margin-top: 4em;">
  <div class="row">
    <div class="col-sm speaker">
      <a id="speakers"></a>
      <h2 class="h2">Speakers</h2>
    </div>
  </div>
</div>
<div class="container">
  <% rows.times do %>
    <div class="row">

    <% cols.times do %>
      <div class="col-lg-4 speaker">
        <%= image_tag speakers[i].img, class: "headshot" %>
        <h3><%= speakers[i].full_name %></h3>
          <p><%= speakers[i].affiliation %></p>
          <%= link_to "View Bio »", "##{speakers[i].id}", class: "btn btn-info btn-sm", role: "button", "aria-expanded": "false", "aria-controls": speakers[i].id, "data-toggle": "collapse" %>
          <div class="collapse" id=<%= speakers[i].id %>>
            <p><%= speakers[i].bio %></p>
            <% if "#{speakers[i].url}".include? "://" %>
              <%= link_to "Website »", speakers[i].url, class: "btn btn-secondary btn-sm", role: "button" %>
            <% end %>
          </div>
      </div>
      <% i+= 1 %>
    <% end %>
    </div>

  <% end %>
  
  <% if over > 0 %>
    <div class="row">
      <% over.times do %>
        <div class="col-lg-4 speaker">
          <%= image_tag speakers[i].img, class: "headshot" %>
          <h3><%= speakers[i].full_name %></h3>
          <p><%= speakers[i].affiliation %></p>
          <%= link_to "View Bio »", "##{speakers[i].id}", class: "btn btn-info btn-sm", role: "button", "aria-expanded": "false", "aria-controls": "#{speakers[i].id}", "data-toggle": "collapse" %>
          <div class="collapse" id=<%= speakers[i].id %>>
            <p><%= speakers[i].bio %></p>
            <% if "#{speakers[i].url}".include? "://" %>
              <%= link_to "View Bio »", "#{speakers[i].url}", class: "btn btn-secondary btn-sm", role: "button" %>
            <% end %>
          </div>
        </div>
        <% i+= 1 %>
      <% end %>
    </div>
  <% end %>
</div>